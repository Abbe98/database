#Add the blazgraph group
addgroup --system --quiet blzg
#Add the blazegraph user with the home directory
#Don't create the home dir now; it will be created by the installer
adduser --system --no-create-home --home /usr/local/blazegraph-ha --quiet blzg
#Enable TCP_TW_REUSE
echo 1 > /proc/sys/net/ipv4/tcp_tw_reuse
#Set VM swappiness to 0
echo "vm.swappiness = 0" >> /etc/sysctl.d/10-vm.swappiness.conf
sysctl -p
